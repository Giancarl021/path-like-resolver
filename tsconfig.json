{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@interfaces": ["./src/interfaces/index"],
      "@services": ["./src/services/index"],
      "@util": ["./src/util/index"]
    },
    "baseUrl": "."
  },
  "include": ["index.ts", "interfaces.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "lib"]
}